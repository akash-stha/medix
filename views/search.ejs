<% include ./partials/header %>
<body>
    <div class="container">
        <div class="row" style="height:100px">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" style="height:100% " >
                <a href="/"><img src="/img/1st.png" alt="Hospitant" height="95%" width="90px" style="margin-left:44.8%"></a>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 float-right" style="height:50%">
                    <div class="row" style="height:100%">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12" id="total-bar">
                                <form method="get" action="/search">
                                <div class="input-group" style="width:100%">
                                    <!-- Input Section -->
                                        <input type="Search" class="form-control" name="search" id="search-input" placeholder="Search hospital By">
                                            <div class="input-group-btn">
                                                <!--Division for the grouping buttons that contains dropdown value for selecting different attributes -->
                                                <div class="btn-group">
                                                    <button type="button" id="srch-val" name="search" class="btn btn-primary dropdown-toggle 1 bttn" data-toggle="dropdown" >
                                                        Select
                                                        <span class="caret"></span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li class="menu1 pointer"><a>Names</a></li>
                                                        <li class="menu1 pointer"><a>City</a></li>
                                                        <li class="menu1 pointer"><a>District</a></li>
                                                        <li class="menu1 pointer"><a>Regions</a></li>
                                                        <li class="menu1 pointer"><a>Diseases Cured</a></li>
                                                        <li class="menu1 pointer"><a>None</a></li>
                                                    </ul>
                                                    <script>
                                                        $(".dropdown-menu li").click(function(){
                                                            $(this).parents(".btn-group").find('.btn').html(
                                                            $(this).text()+" <span class=\"caret\"></span>"
                                                            );
                                                          });
                                                    </script>
                                                </div>
                                                <!-- Division for groupting buttons which has dropdown value for viewing-->
                                                <div class="btn-group">
                                                    <button type="button" name="search" class="btn btn-primary dropdown-toggle 2 bttn" data-toggle="dropdown">
                                                        View
                                                        <span class="caret"></span>
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li class="menu1 pointer"><a>Map</a></li>
                                                        <li class="menu1 pointer"><a>List</a></li>
                                                    </ul>
                                                    <script>
                                                        $(".dropdown-menu li").click(function(){
                                                            $(this).parents(".btn-group").find('.btn').html(
                                                            $(this).text()+" <span class=\"caret\"></span>"
                                                            );
                                                          });
                                                    </script>
                                                </div>
                                                <!-- Division for grouping buttons which has value for search button-->
                                                <div class="btn-group">
                                                    <input type="submit" class="btn btn-primary" style="border-radius:0%" value="Go">
                                                </div>
                                     </div>
                                </div>
                            </form>
                            </div>
                    </div>
            </div>
        </div>
    </div>
    <div class="container" style="padding-bottom:10%">
        <div class="row text-center flex-wrap">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center" style="color:rgba(179, 19, 19, 0.96);">
                <% if(noMatch !== undefined){ %>
                 <h4 style="margin-top:3%;padding-bottom:22%"><%= ' "'+ noMatch +'" ' %><br><small>Tip: Search hospitals or pharmacies using the cateogry i.e by names, by city, by district, by regions and Dieseses cured </small></h4>
                 <% } %>
            </div>
            <% hospitals.forEach(function(hospital){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail" style="background-color:rgba(255, 254, 254, 0.712)">
                    <!-- <img src="<%= hospital.image %>"> -->
                    <img src="/img/hospital.jpg" height="50%">
                    <div class="caption" style="color:rgba(7, 73, 102, 0.96);font-family:Calibri, 'Trebuchet MS', sans-serif">
                        <h4><%= hospital.hospname %></h4>
                        <small><%= hospital.hospaddress %></small>
                    </div>
                    <p>
                        <a href="/search/<%= hospital._id %>" class="btn btn-primary active" style="border-radius: 0%">More Info</a>
                        <!-- <a href="/login" class="btn btn-primary active" style="border-radius: 0%">More Info</a> -->
                    </p>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>    
</body>
<% include ./partials/footer %>